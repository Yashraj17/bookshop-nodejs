doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title BookShop | Signup
    body 
        .container 
            .row 
                .col-4.mx-auto.mt-5
                    .card 
                        .card-body
                            h4.mb-3.text-center Create New Account 
                            form(action="/signup", method="post") 
                                .mb-3 
                                    label(for="") Name 
                                    input(type="text", name="name").form-control 
                                .mb-3 
                                    label(for="") Email 
                                    input(type="email", name="email").form-control 
                                .mb-3 
                                    label(for="") Password 
                                    input(type="password", name="password").form-control
                                .mb-3 
                                    input(type="submit", value="Signup").btn.btn-primary.w-100 