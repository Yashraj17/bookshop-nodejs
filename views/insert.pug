doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title BookShop | Home
    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-primary 
            .container
                a(href="/").navbar-brand BookShop 
                ul.navbar-nav 
                    li.nav-item
                        a(href="/").nav-link Home 
                    li.nav-item
                        a(href="/insert").nav-link Insert  
                    li.nav-item
                        a(href="").nav-link About  
                    li.nav-item
                        a(href="/logout").nav-link Logout 
        .container 
            .row 
                .col-4.mx-auto.mt-5
                    .card 
                        .card-body
                            h4.mb-3.text-center Insert Books 
                            form(action="", method="post" enctype="multipart/form-data") 
                                .mb-3 
                                    label(for="") Book Title 
                                    input(type="text", name="title").form-control 
                                .mb-3 
                                    label(for="") Author 
                                    input(type="text", name="author").form-control 
                                .mb-3 
                                    label(for="") Category 
                                    input(type="text", name="category").form-control 
                                .mb-3 
                                    label(for="") image 
                                    input(type="file", name="image").form-control 
                                .mb-3 
                                    label(for="") Price 
                                    input(type="text", name="price").form-control 
                                .mb-3 
                                    input(type="submit", value="Create").btn.btn-primary.w-100
       

