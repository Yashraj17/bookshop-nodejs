doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title BookShop | Login
    body 
        .container 
            .row 
                .col-4.mx-auto.mt-5
                    .card 
                        .card-body
                            h4.mb-3.text-center Login Here 
                            form(action="/login", method="post")
                                .mb-3 
                                    label(for="") Email 
                                    input(type="email", name="email").form-control 
                                .mb-3 
                                    label(for="") Password 
                                    input(type="password", name="password").form-control
                                .mb-3 
                                    input(type="submit", value="Login").btn.btn-primary.w-100 
                                .mb-3.text-center 
                                    label(for="") Create New Account 
                                    .row.d-flex.text-center 
                                        a(href="/signup") Signup 